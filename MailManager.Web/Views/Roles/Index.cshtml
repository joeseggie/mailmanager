@model IEnumerable<RolesListViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "_AdminLayout";
}

<h1 class="display-6">Roles</h1>
<a asp-action="add" class="btn btn-primary btn-sm">Add role</a>
<hr />
<table class="table table-hover table-sm table-bordered">
    <thead>
        <tr>
            <th class="col-10">
                Role
            </th>
            <th class="col-2"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var role in Model)
            {
                <tr>
                    <td class="col-10">@role.Name</td>
                    <td class="col-2">
                        <a asp-action="delete" asp-route-id="@role.NormalizedName" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

