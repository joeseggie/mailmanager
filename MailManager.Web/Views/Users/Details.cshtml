@model ApplicationUserDetailsViewModel
@{
    ViewData["Title"] = "User Details";
    Layout = "_AdminLayout";
}

<h1 class="display-6">User details</h1>
<a asp-action="index" asp-controller="admin" class="btn btn-light btn-sm">&laquo; Users list</a>
<hr />

<form class="form-horizontal" asp-action="details" asp-controller="users" method="post" role="form">
    <div asp-validation-summary="All" class="text-danger col-12"></div>

    <input type="hidden" asp-for="Username" />
    <input type="hidden" asp-for="Email" />

    <div class="row">
        <div class="col-3">
            <div class="form-group">
                <label asp-for="Email" class="col-form-label"></label>
                <div>
                    <input type="text" class="form-control" asp-for="Email" disabled />
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-3">
            <div class="form-group">
                <label asp-for="Firstname" class="col-form-label"></label>
                <div>
                    <input type="text" class="form-control" asp-for="Firstname" />
                </div>
            </div>
        </div>
        <div class="col-3">
            <div class="form-group">
                <label asp-for="Lastname" class="col-form-label"></label>
                <div>
                    <input type="text" class="form-control" asp-for="Lastname" />
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-3">
            <div class="form-group">
                <label asp-for="Password" class="col-form-label"></label>
                <div>
                    <input type="password" class="form-control" asp-for="Password" />
                </div>
            </div>
        </div>
        <div class="col-3">
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="col-form-label"></label>
                <div>
                    <input type="password" class="form-control" asp-for="ConfirmPassword" />
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-danger btn-sm" value="Save changes" />
    </div>
</form>