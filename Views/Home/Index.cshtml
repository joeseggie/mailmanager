@{
    ViewData["Title"] = "Home";
}
<div class="jumbotron" style="margin-top: 5px;">
    <div class="row">
        <img class="col-sm-2" style="height: 100px; width: 100px;" src="images/uganda-coat-of-arms.png" /><h1 class="col-sm-10">Ministry of Education & Sports</h1>
    </div>
    <h2>Mail Management System</h2>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-offset-1 col-sm-10">
            <div class="form-horizontal">
                <div class="form-group text-center">
                    <div class="input-group">
                        <span class="input-group-addon" id="basic-addon3">Search for mails and files</span>
                        <input type="text" class="form-control" placeholder="Mail reference or file number">
                        <span class="input-group-btn">
                            <input class="btn btn-default" type="submit" value="Search Mails" />
                            <input class="btn btn-default" type="submit" value="Search Files" />
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
