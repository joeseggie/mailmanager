@model IEnumerable<OfficeMailViewModel>

@{
    ViewData["Title"] = "Mails";
}
<h2>Mails</h2>
<hr />
<a asp-action="new" class="btn btn-default">New Incoming Mail</a><br /><br />
<form asp-action="index" method="GET" role="form">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="input-group">
                <span class="input-group-addon">Search for mail</span>
                <input type="text" class="form-control" placeholder="Mail reference number or subject">
                <span class="input-group-btn">
                    <input type="submit" class="btn btn-default" value="Search">
                </span>
            </div>
        </div>
        <table class="table table-condensed table-bordered table-striped table-responsive">
            <thead>
                <tr>
                    <th class="col-sm-3">From</th>
                    <th class="col-sm-2">Reference Number</th>
                    <th class="col-sm-4">Subject</th>
                    <th class="col-sm-3">To</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var mail in Model)
                {
                <tr>
                    <td class="col-sm-3">@mail.From</td>
                    <td class="col-sm-2"><a asp-action="details" asp-route-id=@mail.ReferenceNumber>@mail.ReferenceNumber</a></td>
                    <td class="col-sm-4"><a asp-action="details" asp-route-id=@mail.ReferenceNumber>@mail.Subject</a></td>
                    <td class="col-sm-3">@mail.To</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</form>