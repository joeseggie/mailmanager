@model RegisterViewModel
@{
    ViewData["Title"] = "User Profile";
}

<h2>@ViewData["Title"].</h2>
<hr />
<div class="row">
    <div class="col-sm-offset-3 col-sm-6">
        <div class="panel panel-default">
        <div class="panel-heading"><strong>User Profile Details</strong></div>
        <div class="panel-body">
            <form asp-controller="account" asp-action="userprofile" method="post" class="form-horizontal">
            <input type="hidden" asp-for="Email">
            <input type="hidden" asp-for="Username">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Firstname" class="col-md-4 control-label"></label>
                <div class="col-md-8">
                    <input asp-for="Firstname" class="form-control" />
                    <span asp-validation-for="Firstname" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Lastname" class="col-md-4 control-label"></label>
                <div class="col-md-8">
                    <input asp-for="Lastname" class="form-control" />
                    <span asp-validation-for="Lastname" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Username" class="col-md-4 control-label"></label>
                <div class="col-md-8">
                    <input asp-for="Username" class="form-control" disabled />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="col-md-4 control-label"></label>
                <div class="col-md-8">
                    <input asp-for="Email" class="form-control" disabled />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <!--<div class="form-group">
                <label asp-for="Password" class="col-md-4 control-label"></label>
                <div class="col-md-8">
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="col-md-4 control-label"></label>
                <div class="col-md-8">
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>-->
            <div class="form-group">
                <div class="col-md-offset-4 col-md-8">
                    <a asp-controller="account" asp-action="users" class="btn btn-default"><i class="fa fa-chevron-left"></i>&nbsp;&nbsp;Cancel</a>&nbsp;
                    <button type="submit" class="btn btn-danger">Save</button>
                </div>
            </div>
        </form>
        </div>
    </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
